<% @order.packs.each do |pack| %>
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag SfxPack.find(pack).photos[0], width: "100px" %></div>
    <div class="col">
      <% if @current_sales_list[pack] %>
        <p>Purchase of <strong><%= SfxPack.find(pack).title %></strong> for <strong><%= humanized_money_with_symbol (SfxPack.find(pack).price * (1 - (@current_sales_list[pack] / 100.to_f))) %></strong></p>
      <% else %>
        <p>Purchase of <strong><%= SfxPack.find(pack).title %></strong> for <strong><%= humanized_money_with_symbol SfxPack.find(pack).price %></strong></p>
      <% end %>
    </div>
  </div>
<% end %>
